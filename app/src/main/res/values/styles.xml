<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Material3.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.Material3.CardView.Filled.Primary" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.Material3.CardView.Filled.Secondary" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cornerRadius">4dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="Widget.Material3.CardView.Filled.Tertiary" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorTertiaryContainer</item>
        <item name="cornerRadius">2dp</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/skin</item>
    </style>
</resources>